{
  "curly": false,
  "laxbreak": false,
  "loopfunc": false,
  "onevar": false,
  "strict": false,
  "esnext": true,

  "bitwise": true,
  "browser": true,
  "eqeqeq": true,
  "immed": true,
  "latedef": "nofunc",
  "noarg": true,
  "node": true,
  "newcap": true,
  "noempty": true,
  "nonew": true,
  "trailing": true,
  "undef": true,
  "unused": true,
  "quotmark": true,

  "indent": 2,

  "maxerr": 1000,
  "maxparams": 5,
  "maxdepth": 5,
  "maxstatements": 35,
  "maxcomplexity": 10,

  "predef": [
    "console",
    "exports",
    "module",
    "process",
    "require",

    "__dirname",

    "btoa",

    "document",
    "window",

    "setTimeout",
    "clearTimeout",

    "setInterval",
    "clearInterval",

    "describe",
    "xdescribe",
    "before",
    "beforeEach",
    "afterEach",
    "after",
    "it",
    "xit"
  ]
}
